{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "target": "ES6",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}