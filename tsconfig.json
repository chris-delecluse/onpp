{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "lib": [
      "esnext"
    ],
    "module": "CommonJS",
    "paths": {
      "*": [
      "./src/*"
      ]
    },
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}
